{% comment %} <div class="poster">
  <img src="https://image.tmdb.org/t/p/w500/{{ movie.poster_path }}" alt="Movieposter for {{ mov }}">
  <span class="poster__title">{% if movie.title %}{{ movie.title }}{% else %}{{ movie.name }}{% endif %}</span>
</div> {% endcomment %}

<li class="article">
  <h2>{{ article.title }}</h2>
  {% if article.urlToImage %}
    <img src="{{ article.urlToImage }}">
  {% endif %}
  {% if article.description %}
  <p>{{ article.description }}</p>
  {% elsif article.content %}
  <p>{{ article.content }}</p>
  {% else %}
  <p> No Description or Content Found</p>
  {% endif %}

  <a href="/articles/{{ articleIndex }}">Read More</a>
</li>