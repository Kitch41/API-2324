<html lang="en">
<head>
  {% block head %}
    <title>My First Page</title>
  {% endblock %}
  {% if NODE_ENV == "development" %}
    <script type="module" src="http://localhost:4000/@vite/client" defer></script>
    <script type="module" src="http://localhost:4000/src/index.js" defer></script>
  {% else %}
  <link rel="stylesheet" href="/main.css">
  <script type="module" src="/main.js" defer></script>
  <script type="nomodule" src="/polyfills-legacy.js" defer></script>
  <script type="nomodule" src="/main-legacy.js" defer></script>
  {% endif %}
  {% block styles %}{% endblock %}
  {% block scripts %}{% endblock %}
</head>

<body>
  {% block content %}{% endblock %}
</body>
</html>
